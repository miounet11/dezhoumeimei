# ================================
# PokerIQ Pro 环境变量配置模板
# ================================

# 端口配置说明：
# - 开发环境: 8820
# - 测试环境: 8821  
# - 预发布环境: 8822
# - 生产环境: 8830
# - Prisma Studio: 8840
# - WebSocket: 8850

# Database
DATABASE_URL="file:./prisma/dev.db"

# NextAuth
# 开发环境使用 8820 端口
NEXTAUTH_URL="http://localhost:8820"
NEXTAUTH_SECRET="your-super-secret-key-change-in-production-minimum-32-chars"

# Payment (Stripe)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Payment (Alipay)
ALIPAY_APP_ID=""
ALIPAY_PRIVATE_KEY=""
ALIPAY_PUBLIC_KEY=""

# Redis (for caching)
REDIS_URL="redis://localhost:6379"

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-west-2"
AWS_S3_BUCKET=""

# Sentry (for error tracking)
SENTRY_DSN=""

# Analytics
GOOGLE_ANALYTICS_ID=""
MIXPANEL_TOKEN=""